<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:padding="10dip"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
        >
<TextView android:text="@string/pref_seekbar1_title"
	android:id="@+id/title1"
	android:textSize="24.0sp"
	android:padding="5dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
	android:padding="5dip"
    >
<SeekBar android:layout_height="wrap_content" 
	android:id="@+id/seekBar1" 
	android:layout_width="0dip"
	android:layout_weight="1"
	android:progress="0"
	android:max="100"
	 />
<TextView android:id="@+id/value1" 
	android:textSize="24.0sp"
	android:padding="10dip"
	android:layout_width="60dip" 
	android:layout_weight="0" 
	android:layout_height="wrap_content" />
</LinearLayout>
<RadioGroup android:id="@+id/radio_average"
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="5dip">
	<RadioButton 
		android:id="@+id/rd_average1"
		android:text="@string/pref_average_finite"
		android:textSize="24.0sp" />
	<RadioButton 
		android:id="@+id/rd_average2"
		android:text="@string/pref_average_infinite"
		android:textSize="24.0sp" />
</RadioGroup>
<TextView android:text="@string/pref_seekbar2_title" 
	android:id="@+id/title2" 
	android:textSize="24.0sp"
	android:padding="5dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="5dip"
    >
<SeekBar android:layout_height="wrap_content" 
	android:id="@+id/seekBar2" 
	android:layout_width="0dip"
	android:layout_weight="1" 
	android:progress="1"
	android:max="9"
	/>
<TextView android:id="@+id/value2" 
	android:textSize="24.0sp"
	android:padding="10dip"
	android:layout_width="60dip" 
	android:layout_weight="0" 
	android:layout_height="wrap_content" />
</LinearLayout>
<TextView android:text="@string/pref_seekbar3_title" 
	android:id="@+id/title3" 
		 android:textSize="24.0sp"
	android:padding="5dip"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="5dip"
    >
<SeekBar android:layout_height="wrap_content" 
	android:id="@+id/seekBar3" 
	android:layout_width="0dip"
	android:layout_weight="1"
	android:progress="0"
	android:max="200"
	 />
<TextView android:id="@+id/value3" 
	android:textSize="24.0sp"
	android:padding="10dip"
	android:layout_width="60dip" 
	android:layout_weight="0" 
	android:layout_height="wrap_content" />
</LinearLayout>
 </LinearLayout>
</ScrollView>
</LinearLayout>
